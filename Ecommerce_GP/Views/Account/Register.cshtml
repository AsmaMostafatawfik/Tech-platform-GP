@using GP.Data.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="acount-box">
        <h2 class="text-center mb-5">Register</h2>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>

            <div class="mb-4 text_area">
                <input asp-for="Name" class="form-control text_area " type="text" placeholder="Name" class="mb-3" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4 text_area">
                <input asp-for="Email" class="form-control text_area " type="email" placeholder="Email" class="mb-3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-4 text_area">
                <input asp-for="Password" class="form-control text_area" type="password" placeholder="password" class="mb-3" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4 text_area">
                <input asp-for="ConfirmPassword" class="form-control text_area" type="password" placeholder="Confirm Password" class="mb-3" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            
        
        <input type="submit" value="Register" class="Btn" />
        <p class="text-center mt-2 .text-content">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a></p>
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3 .text-content">Back</a>
        </div>
        </form>

    </div>
</div>
