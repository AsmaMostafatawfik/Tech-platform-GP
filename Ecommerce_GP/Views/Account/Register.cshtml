@using GP.Data.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    
}



<!-- Background Image Section -->
<div class="bg-container">
    <img src="~/img/login.jpg" alt="Account Banner" class="bg-image">
    <div class="overlay-content">
        <div class="breadcrumb">
            <p><a href="@Url.Action("Index", "Home")">Home</a>  /  <span class="breadcrumb-active">Create Account</span></p>
        </div>
        <h1 class="account-heading"> Create Account</h1>
    </div>
</div>


<div class="container account-container">
    <div class="row justify-content-center">
        <div class="col-md-6 p-5 register-box">
            <h2 class="mb-3 text-center">Create Account</h2>
            <p class="text-muted text-center" style="color: rgb(255 255 255 / 75%) !important">Please register using your details below.</p>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <input asp-for="Name" class="form-control custom-input" type="text" placeholder="First Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control custom-input" type="email" placeholder="Email Address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Password" class="form-control custom-input" type="password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control custom-input" type="password" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Create →</button>

                <p class="text-center mt-3">SSL Secure</p>
            </form>

            <p class="text-center mt-3">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a></p>

            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="back-to-shop">Back</a>
            </div>
        </div>
    </div>
</div>







