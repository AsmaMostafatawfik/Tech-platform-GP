@using GP.Data.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="acount-box">
        <h2 class="text-center mb-5">Verify Email</h2>
        <form asp-action="VerifyEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
            <div class="mb-4 text_area">

                <input asp-for="Email" class="form-control text_area " type="email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
         
       
        <input type="submit" value="Verify" class="Btn" />
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3 .text-content">Back</a>
        </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
