<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commerce_platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce_platform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top"
             style="background: rgba(0, 0, 0, 0.1); backdrop-filter: blur(2px); position: absolute; width: 100%;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo2.png" alt="E-Commerce Logo" height="40" class="me-2">
                    <span class="fw-bold text-white">Tech</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-white active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Review" asp-action="Index">Review</a>
                        </li>
                        <partial name="_LoginPartial" />
                        <li class="nav-item ms-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user"></i>
                            </a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>





    <main>
        @RenderBody()
    </main>







<footer class="footer bg-dark text-white py-5">
    <div class="container">
        <div class="row text-center text-md-start">
            
            <!-- Company Information -->
            <div class="col-md-3">
                <h5 class="text-uppercase mb-3">Tech Platform</h5>
                <p>Your trusted e-commerce store for high-quality electronics, including smartphones, laptops, and accessories.</p>
            </div>

            <!-- Quick Links -->
            <div class="col-md-3">
                <h5 class="text-uppercase mb-3">Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">Home</a></li>
                    <li><a href="#" class="text-white">Shop</a></li>
                    <li><a href="#" class="text-white">About Us</a></li>
                    <li><a href="#" class="text-white">Contact</a></li>
                </ul>
            </div>

            <!-- Support & Policies -->
            <div class="col-md-3">
                <h5 class="text-uppercase mb-3">Support</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">FAQ</a></li>
                    <li><a href="#" class="text-white">Shipping & Returns</a></li>
                    <li><a href="#" class="text-white">Privacy Policy</a></li>
                    <li><a href="#" class="text-white">Terms & Conditions</a></li>
                </ul>
            </div>

            <!-- Contact & Social Media -->
            <div class="col-md-3">
                <h5 class="text-uppercase mb-3">Contact Us</h5>
                <p>Email: support@techplatform.com</p>
                <p>Phone: +1 (800) 123-4567</p>
                <p>Address: 123 Tech Street, New York, USA</p>
                
                <h5 class="text-uppercase mt-3">Follow Us</h5>
                <div class="d-flex">
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter fa-lg"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-instagram fa-lg"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-linkedin fa-lg"></i></a>
                </div>
            </div>
        </div>

        <!-- Copyright Section -->
        <div class="text-center mt-4">
            <p class="mb-0">&copy; 2025 Tech Platform | All Rights Reserved.</p>
        </div>
    </div>
</footer>






    <script src="https://kit.fontawesome.com/YOUR-FONT-AWESOME-KIT.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
